<phpunit bootstrap="./TestBootstrap.php">
	<testsuite name="Zend Framework 1 Theme Component - Testsuite">
		<directory>./Tests</directory>
	</testsuite>
	<filter>
		<whitelist addUncoveredFilesFromWhitelist="true">
			<directory suffix=".php">../src/</directory>
			<exclude>
				<directory>../src/Test</directory>
			</exclude>
		</whitelist>
	</filter>
	<logging>
		<log highlowerbound="80" lowupperbound="50" highlight="true" yui="true" charset="UTF-8" target="./log/report" type="coverage-html"></log>
		<log target="./log/testdox.html" type="testdox-html"></log>
	</logging>

</phpunit>
